#!/usr/bin/env bash

screen_script="$HOME/dotfiles/screens/laptop"

if [ "$1" = "work" ]; then
    screen_script="$HOME/dotfiles/screens/work_dell"
fi

if [ "$1" = "home" ]; then
    screen_script="$HOME/dotfiles/screens/home_asus"
fi

"$screen_script"
ps aux  | grep waybar | grep -v 'grep' | awk '{print $2}' | xargs kill -9
nohup waybar &
